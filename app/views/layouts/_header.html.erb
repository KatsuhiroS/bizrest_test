<header>
  <div class='header-left'>
    <%= link_to 'Bizrest', root_path %>
  </div>
  <div class='header-right'>
    <ul>
      <% if current_user %>
        <li>
          <%= link_to current_user.name, mypage_path %>
        </li>
        <li>
          <%= link_to 'ログアウト', signout_path, method: :delete %>
        </li>
      <% else %>
      <li>
        <%= link_to 'ログイン', signin_path %>
      </li>
      <li>
        <%= link_to '新規登録', signup_path %>
      </li>
      <% end %>
    </ul>
  </div>
</header>
