%body
  %header
    .header-left
      = link_to 'Bizrest', root_path
    .header-right
      %ul
        - if current_user
          %li
            = link_to current_user.email, mypage_path
          %li
            = link_to 'ログアウト', signout_path, method: :delete
        - else
          %li
            = link_to 'ログイン', signin_path
          %li
            = link_to '新規登録', signup_path
